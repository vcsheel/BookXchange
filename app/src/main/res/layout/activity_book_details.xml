<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookDetailsActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbard" />

    <ScrollView
        android:layout_below="@+id/toolbard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="Book Image"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:id="@+id/bookFullImage"
                android:layout_height="300dp" />

            <View
                android:id="@+id/view1"
                android:layout_below="@+id/bookFullImage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_below="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bookdNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Book Name"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/authordNameTV"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:text="Author Name" />

                    <TextView
                        android:id="@+id/pricedTV"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:padding="3dp"
                        android:text="45"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textViewRating"
                        android:padding="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#7f915e"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:text="4.7"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:drawablePadding="2dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view2"
                android:layout_below="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_below="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="40dp">

                    <Button
                        android:id="@+id/sharedTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:text="Share"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider"/>

                    <Button
                        android:gravity="center"
                        android:text="WishList"
                        android:background="#ffffff"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textAllCaps="false"
                        android:id="@+id/WishListTV"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_below="@+id/card2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Extra Details"
                    android:gravity="center"
                    android:layout_height="400dp" />

            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonsBottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="BUY"
            android:textSize="18sp"
            android:background="#cadae2"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="RENT"
            android:background="#576172"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>